					"listen": "test",
					"script": {
						"id": "32a774c0-6f22-4b7d-a399-2e7ef9288d92",
						"exec": [
							"var data = pm.response.json();",
							"pm.environment.set(\"order_code\", data.code);",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
